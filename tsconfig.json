{
  "compilerOptions": {
    "outDir": "./dist/",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "lib": ["es2019"],
    "types": ["./src/plugins"],
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
